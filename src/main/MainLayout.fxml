<VBox prefHeight="1000.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controller.FxmlController">
<children>
    <MenuBar VBox.vgrow="NEVER">
        <menus>
            <Menu mnemonicParsing="false" text="Input">
                <items>
                    <Menu mnemonicParsing="false" text="Open Bam/Sam Files">
                        <items>
                            <MenuItem mnemonicParsing="false" text="File Chooser SAM/BA" onAction="#menuOpenBam"></MenuItem>
                            <MenuItem mnemonicParsing="false" text="File Chooser Fasta" onAction="#menuOpenFasta"/>

                        </items>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Map Reads">
                        <items>
                            <MenuItem mnemonicParsing="false" text="File Chooser References" />
                        </items>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Export Image">
                        <items>
                            <MenuItem mnemonicParsing="false" text="PNG (current view) " onAction="#menuSaveImage"/>
                        </items>
                    </Menu>

                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Select">
                <items>
                    <MenuItem mnemonicParsing="false" text="Select by range" />
                    <MenuItem mnemonicParsing="false" text="Blast Sequence" />
                    <MenuItem mnemonicParsing="false" text="Open Statistics View" />
                    <MenuItem mnemonicParsing="false" text="Copy Sequence to Clipboard" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="View">
                <items>
                    <MenuItem mnemonicParsing="false" text="Open Last Blast" />
                    <MenuItem mnemonicParsing="false" text="Export Image" />

                </items>
            </Menu>
        </menus>
    </MenuBar>
      
    <SplitPane dividerPositions="0.0, 1.0" focusTraversable="true" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS" fx:id="mainSplitPane">
        <items>
            <Accordion minWidth="169.0" prefHeight="553.0" prefWidth="169.0" SplitPane.resizableWithParent="false">
                <panes>
                    <TitledPane animated="false" pickOnBounds="false" text="View elements" fx:id="x5">
                        <content>
                            <AnchorPane id="Content" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                <children>
                                    <Slider id="layoutElementBondSize" fx:id="lEbondSize" layoutX="16.0" layoutY="74.0" majorTickUnit="5.0" max="10.0" minorTickCount="1" prefWidth="147.0" showTickLabels="false" showTickMarks="true" value="3.0" />
                                    <Slider id="" fx:id="lEAtomSize" layoutX="-12.0" layoutY="31.0" majorTickUnit="5.0" max="10.0" minorTickCount="1" prefWidth="147.0" showTickMarks="true" snapToTicks="false" value="5.0" />
                                    <VBox id="VBox" alignment="TOP_LEFT" layoutX="14.0" layoutY="106.0" spacing="10.0">
                                        <children>
                                            <RadioButton fx:id="lEshowAtoms" mnemonicParsing="false" text="Atoms" />
                                            <RadioButton fx:id="lEshowBonds" mnemonicParsing="false" text="Bonds" />
                                            <RadioButton fx:id="lEshowSecondaryStructure" mnemonicParsing="false" text="Secondary Structure" />
                                            <RadioButton fx:id="lEshowRibbons" mnemonicParsing="false" text="Ribbon View" />
                                        </children>
                                    </VBox>
                                    <Label layoutX="14.0" layoutY="14.0" text="Atom size" />
                                    <Label id="lEBondSize" layoutX="14.0" layoutY="57.0" text="Bond size" />
                                    <CheckBox layoutX="33.0" layoutY="261.0" mnemonicParsing="false" text="CheckBox" />
                                </children>
                            </AnchorPane>
                        </content>
                    </TitledPane>
                    <TitledPane animated="false" text="Colouring" fx:id="x6">
                        <content>
                            <AnchorPane id="Content" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                        </content>
                    </TitledPane>
                </panes>
            </Accordion>
            <AnchorPane fx:id="mainPane" >
            </AnchorPane>
            <AnchorPane maxWidth="200.0" minWidth="200.0" prefHeight="200.0" prefWidth="200.0" />
        </items>
    </SplitPane>
    <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
        <children>
            <Label maxHeight="1.7976931348623157E308" maxWidth="-1.0" text="Program Status" HBox.hgrow="ALWAYS">
                <font>
                    <Font size="11.0" fx:id="x3" />
                </font>
                <textFill>
                    <Color blue="0.625" green="0.625" red="0.625" fx:id="x4" />
                </textFill>
            </Label>
            <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label layoutX="34.0" layoutY="4.0" maxHeight="1.7976931348623157E308" maxWidth="-1.0" text="File Name">
                     <font>
                        <Font size="11.0" fx:id="x31" />
                     </font>
                     <textFill>
                        <Color blue="0.625" green="0.625" red="0.625" fx:id="x41" />
                     </textFill>
                  </Label>
                  <Label layoutX="115.0" layoutY="3.0" maxHeight="1.7976931348623157E308" maxWidth="-1.0" text="Total Length">
                     <font>
                        <Font size="11.0" fx:id="x32" />
                     </font>
                     <textFill>
                        <Color blue="0.625" green="0.625" red="0.625" fx:id="x42" />
                     </textFill>
                  </Label>
               </children></Pane>
            <Label font="$x3" maxWidth="-1.0" text="Mouse Position" textFill="$x4" HBox.hgrow="NEVER" />
        </children>
        <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
        </padding>
    </HBox>
</children>
</VBox>
